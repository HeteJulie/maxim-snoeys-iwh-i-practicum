doctype html
html
    head
        title= `${title}`
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet", href="/css/style.css")
    body
        h1 #{title}
        form(method="POST")
            label(for="name") New cocktail
            input(type="text" name="name" required)

            label(for="mixingTechnique") Mixing technique
            input(type="text" name="mixingTechnique" required)

            label(for="taste") Taste
            input(type="text" name="taste" required)

            input(type="submit" value="Submit")

        a(href="/") Return to the homepage